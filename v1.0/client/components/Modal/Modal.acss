.card-no-shadow {
  overflow: hidden;
  border-radius: 8px;
}
.card-shadow {
  overflow: hidden;
  border-radius: 8px;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}
.cover-background {
  background-position: center;
  background-size: cover;
}
.modal-show {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}
.modal-hide {
  display: none;
}
.modal-mask {
  background-color: rgba(0, 0, 0, 0.185);
  display: flex;
  height: 100%;
  justify-content: center;
  align-items: center;
}
.modal-content {
  overflow: hidden;
  border-radius: 8px;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  position: relative;
  width: 600rpx;
  height: 80%;
  background-color: white;
}
.modal-close {
  position: absolute;
  z-index: 10000;
  top: 0;
  right: 0;
  width: 100rpx;
  height: 100rpx;
  background-position: center;
  background-image: url('/images/common/close_2x.png');
  background-size: 50rpx 50rpx;
  background-repeat: no-repeat;
}
