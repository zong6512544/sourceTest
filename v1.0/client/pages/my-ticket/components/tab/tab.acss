.tab {
  display: flex;
  background-color: #f5f5f5;
}
.tab-item {
  position: relative;
  padding: 27rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
  width: 50%;
  text-align: center;
}
.tab-item--active {
  height: 2rpx;
  background-color: #009d9a;
  width: 36rpx;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 74rpx;
}
